
extends layout

block append vars
  - bodyclass = 'article-detail'

block append title
  | #{ " - " + page.title }
//-
  block header
    include author
    h1= page.title
    p.author
      | #{ "Written by " }
      mixin author(page.metadata.author)

block content
  div.content-wrap
    article.article
      include author
      h3= page.title
      p.author
        span=page.date.toDateString()
        | #{ ", Written by " }
        mixin author(page.metadata.author)
      hr
      section.content!= typogr(page.html).typogrify()

